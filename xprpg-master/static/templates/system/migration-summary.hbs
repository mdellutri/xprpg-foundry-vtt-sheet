{{#if options.troubleshoot}}
    <h3>{{localize "XPRPG.Migrations.Summary.Troubleshoot.Hint" version=systemVersion}}</h3>
{{else}}
    <h3>{{localize "XPRPG.Migrations.Finished" version=systemVersion}}</h3>
{{/if}}
<div class="dialog-content">
    <table>
        <thead>
            <tr>
                <th>{{localize "XPRPG.Migrations.Summary.Documents"}}</th>
                <th>{{localize "XPRPG.Migrations.Summary.Migrated"}} / {{localize "XPRPG.Migrations.Summary.Total"}}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{localize "XPRPG.Actor.Plural"}}</td>
                <td><span class="docs-successful">{{actors.successful}}</span> / {{actors.total}}</td>
                <td>
                    {{#if (eq actors.successful actors.total)}}
                        <i class="fas fa-check"></i>
                    {{else}}
                        <i class="fas fa-times"></i>
                    {{/if}}
                </td>
            </tr>
            <tr>
                <td>{{localize "XPRPG.Item.Plural"}}</td>
                <td><span class="docs-successful">{{items.successful}}</span> / {{items.total}}</td>
                <td>
                    {{#if (eq items.successful items.total)}}
                        <i class="fas fa-check"></i>
                    {{else}}
                        <i class="fas fa-times"></i>
                    {{/if}}
                </td>
            </tr>
        </tbody>
    </table>
</div>
{{#if helpResources}}
    <p class="help-resources">{{{helpResourcesText}}}</p>
{{/if}}
<div class="dialog-buttons">
    <button type="button" data-action="close">{{localize "XPRPG.OK"}}</button>
    {{#if canRemigrate}}<button type="button" data-action="remigrate" {{disabled helpResources}}>{{localize "XPRPG.Migrations.Summary.Remigrate"}}</button>{{/if}}
</div>
