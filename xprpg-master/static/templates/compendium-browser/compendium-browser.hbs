<div class="content-box">
    <nav data-group="primary">
        <a data-tab="landing-page" style="display:none"></a>
        <a data-tab="action">{{localize "XPRPG.CompendiumBrowser.TabAction"}}</a>
        <a data-tab="equipment">{{localize "XPRPG.CompendiumBrowser.TabEquipment"}}</a>
        <a data-tab="feat">{{localize "XPRPG.CompendiumBrowser.TabFeat"}}</a>
        {{#if user.isGM}}
            <a data-tab="hazard">{{localize "XPRPG.CompendiumBrowser.TabHazard"}}</a>
        {{/if}}
        <a data-tab="spell">{{localize "XPRPG.CompendiumBrowser.TabSpell"}}</a>
        {{#if user.isGM}}
            <a data-tab="settings">{{localize "XPRPG.CompendiumBrowser.TabSettings"}}</a>
        {{/if}}
    </nav>
    <section class="content">
        <div class="tab" data-group="primary" data-tab="landing-page">
            <div style='text-align:center; padding: 2em;'>{{localize "XPRPG.CompendiumBrowser.Hint"}}</div>
        </div>

        {{#with action}}
            <div class="tab browser" data-group="primary" data-tab="action">
                <div class="spell-browser">
                    {{> "systems/xprpg/templates/compendium-browser/filters.hbs"}}
                    <ul class="item-list result-list"></ul>
                </div>
            </div>
        {{/with}}

        {{#with equipment}}
            <div class="tab browser" data-group="primary" data-tab="equipment">
                <div class="spell-browser">
                    {{> "systems/xprpg/templates/compendium-browser/filters.hbs"}}
                    <ul class="item-list result-list"></ul>
                </div>
            </div>
        {{/with}}

        {{#with feat}}
            <div class="tab browser" data-group="primary" data-tab="feat">
                <div class="spell-browser">
                    {{> "systems/xprpg/templates/compendium-browser/filters.hbs"}}
                    <ul class="item-list result-list"></ul>
                </div>
            </div>
        {{/with}}

        {{#if user.isGM}}
            {{#with hazard}}
                <div class="tab browser" data-group="primary" data-tab="hazard">
                    <div class="spell-browser">
                        {{> "systems/xprpg/templates/compendium-browser/filters.hbs"}}
                        <ul class="item-list result-list"></ul>
                    </div>
                </div>
            {{/with}}
        {{/if}}

        {{#with spell}}
            <div class="tab browser" data-group="primary" data-tab="spell">
                <div class="spell-browser">
                    {{> "systems/xprpg/templates/compendium-browser/filters.hbs"}}
                    <ul class="item-list result-list"></ul>
                </div>
            </div>
        {{/with}}

        {{#if user.isGM}}
            {{#with settings}}
                <div class="tab settings" data-group="primary" data-tab="settings">
                    {{> "systems/xprpg/templates/compendium-browser/browser-settings.hbs"}}
                </div>
            {{/with}}
        {{/if}}
    </section>
</div>
