<div class="inventory-details">
    <div class="form-group">
        <label>{{localize "XPRPG.QuantityLabel"}}</label>
        <input type="number" name="system.quantity" value="{{data.quantity}}" />
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.Usage"}}</label>
        <select name="system.usage.value">
            {{#select data.usage.value}}
                {{#each usage as |label key|}}
                    <option value="{{key}}">{{localize label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.BulkLabel"}}</label>
        <select name="system.weight.value" {{disabled bulkDisabled}}>
            {{#select data.weight.value}}
                <option value="-">{{localize "XPRPG.NegligibleOption"}}</option>
                {{#each bulkTypes as |name type|}}
                    <option value="{{type}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.Size"}}</label>
        <select name="system.size">
            {{#select data.size}}
                {{#each sizes as |name value|}}
                    <option value="{{value}}">{{localize name}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.PriceLabel"}}</label>
        <input type="text" name="system.price.value" value="{{priceString}}" />
    </div>
</div>
