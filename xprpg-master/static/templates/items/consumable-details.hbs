<div class="form-group">
    <label>{{localize "XPRPG.ConsumableTypeLabel"}}</label>
    <select name="system.consumableType.value">
        {{#select data.consumableType.value}}
            {{#each consumableTypes as |name type|}}
                <option value="{{type}}">{{localize name}}</option>
            {{/each}}
        {{/select}}
    </select>
</div>

<div class="form-group">
    <label>{{localize "XPRPG.ConsumableConsumeLabel"}}</label>
    <input type="text" name="system.consume.value" value="{{data.consume.value}}" placeholder="{{localize "XPRPG.FormulaPlaceholder"}}" />
</div>

<div class="form-group">
    <label>{{localize "XPRPG.ConsumableAutoDestroyLabel"}}</label>
    <input type="checkbox" name="system.autoDestroy.value" {{checked data.autoDestroy.value}} />
</div>

<div class="form-group-stacked">
    <label>
        {{localize "XPRPG.Item.Physical.OtherTags.Label"}}
        <i class="fas fa-info-circle other-tags-hint" title="XPRPG.Item.Physical.OtherTags.Hint"></i>
        {{#if editable}}
            <a class="tag-selector" data-tag-selector="basic" data-config-types="otherConsumableTags" data-title="XPRPG.Item.Physical.OtherTags.Label" data-property="system.traits.otherTags"><i class="fas fa-edit"></i></a>
        {{/if}}
    </label>
    <ul class="traits-list tags">
        {{#each otherTags as |tag|}}
            <li class="tag tag_alt">{{tag.label}}</li>
        {{/each}}
    </ul>
</div>
