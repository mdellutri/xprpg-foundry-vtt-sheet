<div class="inventory-details">
    <div class="form-group">
        <label>{{localize "XPRPG.HitPointsHeader"}}</label>
        <input type="number" name="system.hp" value="{{data.hp}}" />
    </div>

    <div class="form-group">
        <label>{{localize "XPRPG.SizeLabel"}}</label>
        <select name="system.size">
            {{#select data.size}}
                {{#each sizes}}
                    <option value="{{@key}}">{{localize this.label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>

    <div class="form-group">
        <label>{{localize "XPRPG.Reach"}}</label>
        <input type="number" name="system.reach" value="{{data.reach}}" />
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.SpeedFeet"}}</label>
        <input type="number" name="system.speed" value="{{data.speed}}" />
    </div>
    <div class="form-group">
        <label>{{localize "XPRPG.Item.Ancestry.Vision.Label"}}</label>
        <select name="system.vision">
            {{#select data.vision}}
                <option value="normal">{{localize "XPRPG.Item.Ancestry.Vision.Normal"}}</option>
                <option value="lowLightVision">{{localize "XPRPG.Actor.Creature.Sense.Type.LowLightVision"}}</option>
                <option value="darkvision">{{localize "XPRPG.Actor.Creature.Sense.Type.Darkvision"}}</option>
            {{/select}}
        </select>
    </div>
</div>
