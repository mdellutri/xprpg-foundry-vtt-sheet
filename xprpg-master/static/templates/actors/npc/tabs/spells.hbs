<div class="tab spells" data-group="primary" data-tab="spells">
    <ol class="entries-list">
        {{#each spellcastingEntries as |entry eid|}}
            <li class="spellcasting-entry item item-container" data-item-id="{{entry.id}}" {{#if entry.hasCollection}}data-container-type="spellcastingEntry" data-container-id="{{entry.id}}"{{/if}}>
                <div class="header">
                    <a class="drag-handle"><i class="fas fa-bars"></i></a>
                    {{#if entry.isPrepared}}
                        <a class="skill-name prepared-toggle" title="{{localize "XPRPG.ToggleSpellVisibilityTitle"}}"><i class="fas fa-book"></i></a>
                    {{/if}}

                    <h4 class="name">
                        <input type="text" data-item-id="{{entry.id}}" data-item-property="name" value="{{entry.name}}" />
                    </h4>
                    <div class="spellDC inline-field">
                        <label title="{{entry.statistic.dc.breakdown}}">{{localize "XPRPG.NPC.Spells.DCLabel"}}</label>
                        <input type="number"
                            class="dc-input modifier adjustable{{#if entry.adjustedHigher.dc}} adjusted-higher{{/if}}{{#if entry.adjustedLower.dc}} adjusted-lower{{/if}}"
                            data-display-value="{{entry.statistic.dc.value}}"
                            data-base-property="data.items.{{eid}}.system.spelldc.dc"
                            value="{{entry.statistic.dc.value}}"
                            placeholder="0"
                        />
                    </div>
                    <div class="spellAttack inline-field">
                        <label class="rollable" title="{{entry.statistic.check.breakdown}}">{{localize "XPRPG.NPC.Spells.AttackLabel"}}</label>
                        <input type="number"
                            class="attack-input modifier adjustable{{#if entry.adjustedHigher.mod}} adjusted-higher{{/if}}{{#if entry.adjustedLower.mod}} adjusted-lower{{/if}}"
                            data-display-value="{{entry.statistic.check.mod}}"
                            data-base-property="data.items.{{eid}}.system.spelldc.value"
                            value="{{numberFormat entry.statistic.check.mod decimals=0}}"
                            placeholder="0"
                        />
                    </div>
                    <div class="ability-score inline-field">
                        <select data-base-property="data.items.{{eid}}.system.ability.value">
                            {{#select entry.system.ability.value}}
                                <option value="str">{{localize "XPRPG.AbilityId.str"}}</option>
                                <option value="dex">{{localize "XPRPG.AbilityId.dex"}}</option>
                                <option value="con">{{localize "XPRPG.AbilityId.con"}}</option>
                                <option value="int">{{localize "XPRPG.AbilityId.int"}}</option>
                                <option value="wis">{{localize "XPRPG.AbilityId.wis"}}</option>
                                <option value="cha">{{localize "XPRPG.AbilityId.cha"}}</option>
                            {{/select}}
                        </select>
                    </div>

                    {{#if ../options.editable}}
                        <div class="item-controls">
                            {{#if (or entry.isPrepared entry.isSpontaneous entry.isInnate)}}
                                <a class="skill-name slotless-level-toggle" title="{{localize "XPRPG.ToggleSlotlessSpellLevelsTitle"}}">
                                    <i class="{{#if entry.system.showSlotlessLevels.value}}fas{{else}}far{{/if}} fa-list-alt"></i>
                                </a>
                            {{/if}}
                            {{#unless entry.isRitual}}<a class="item-control" data-action="spellcasting-edit" title="{{localize "XPRPG.EditItemTitle"}}"><i class="fas fa-edit"></i></a>{{/unless}}
                            <a class="item-control" data-action="spellcasting-remove" title="{{localize "XPRPG.RemoveSpellcastingEntryTitle"}}" data-type="{{eid}}"><i class="fas fa-trash"></i></a>
                        </div>
                    {{/if}}
                </div>
                {{#if entry.hasCollection}}
                    <div class="body">
                        {{> "systems/xprpg/templates/actors/spellcasting-spell-list.hbs" entry=entry}}
                    </div>
                {{/if}}
            </li>

        {{/each}}
    </ol>

    {{#if options.editable}}
        <div class="footer">
            <button type="button" class="spellcasting-create" data-action="spellcasting-create"><i class="fas fa-plus"></i> {{localize "XPRPG.AddSpellcastingEntryTitle"}}</button>
        </div>
    {{/if}}
</div>
