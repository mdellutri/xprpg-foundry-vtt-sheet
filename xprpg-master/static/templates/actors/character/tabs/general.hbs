<div class="tab character" data-group="primary" data-tab="character">
    <section class="character-details">
        <div class="frame-container">
            <div class="frame image-container"">
                <img class="player-image" alt="{{actor.name}}" src="{{actor.img}}" title="{{actor.name}}" data-edit="img" />
                <a class="hover-icon" data-action="show-image"><i class="fas fa-image fa-fw"></i></a>
            </div>
        </div>
        <div class="alignment">
            <span class="bio-alignment" title="{{localize "XPRPG.AlignmentTitle"}}">
                <select aria-label="{{localize "XPRPG.Alignment"}}" name="system.details.alignment.value">
                    {{#select data.details.alignment.value}}
                        {{#each alignments as |label key|}}
                            <option value="{{key}}">{{localize label}}</option>
                        {{/each}}
                    {{/select}}
                </select>
            </span>
        </div>
        <div class="pc pc_deity" data-item-id="{{deity.id}}">
            <div class="input">
                <label class="details-label">{{localize "ITEM.TypeDeity"}}</label>
                <h3>
                    <span class="value">{{deity.name}}</span>
                    {{#if @root.options.editable}}
                        {{#if deity}}
                            <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        {{else}}
                            <a class="open-compendium" data-compendium="xprpg.deities"><i class="fas fa-fw fa-plus-circle"></i></a>
                        {{/if}}
                    {{/if}}
                </h3>
            </div>
            {{#if deity}}
                <img class="symbol" src="{{deity.img}}" alt="{{deity.name}}" />
            {{else}}
                <img class="symbol" src="systems/xprpg/icons/default-icons/deity.svg" alt="{{localize "XPRPG.Deity"}}" />
            {{/if}}
        </div>
        <div class="detail-sheet">
            <div class="pc pc_ancestry item" data-item-id="{{ancestry.id}}">
                <span class="details-label">{{localize "ITEM.TypeAncestry"}}</span>
                <span title="{{localize "XPRPG.AncestryTitle"}}">
                    <h3>
                        <span class="value">{{ancestry.name}}</span>
                        {{#if @root.options.editable}}
                            {{#if ancestry}}
                                <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                            {{else}}
                                <a class="open-compendium" data-compendium="xprpg.ancestries"><i class="fas fa-fw fa-plus-circle"></i></a>
                            {{/if}}
                        {{/if}}
                    </h3>
                </span>
            </div>
            <div class="pc pc_heritage item" data-item-id="{{heritage.id}}">
                <span class="details-label">{{localize "XPRPG.Heritage"}}</span>
                <span title="{{localize "XPRPG.HeritageTitle"}}">
                    <h3>
                        <span class="value">{{heritage.name}}</span>
                        {{#if @root.options.editable}}
                            {{#if heritage}}
                                <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                            {{else}}
                                <a class="open-compendium" data-compendium="xprpg.heritages"><i class="fas fa-fw fa-plus-circle"></i></a>
                            {{/if}}
                        {{/if}}
                    </h3>
                </span>
            </div>
            <div class="pc pc_class item" data-item-id="{{class.id}}">
                <span class="details-label">{{localize "XPRPG.Class"}}</span>
                <span title="{{localize "XPRPG.ClassTitle"}}">
                    <h3>
                        <span class="value">{{class.name}}</span>
                        {{#if @root.options.editable}}
                            {{#if class}}
                                <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                            {{else}}
                                <a class="open-compendium" data-compendium="xprpg.classes"><i class="fas fa-fw fa-plus-circle"></i></a>
                            {{/if}}
                        {{/if}}
                    </h3>
                </span>
            </div>
            <div class="pc pc_background item" data-item-id="{{background.id}}">
                <span class="details-label">
                    {{localize "XPRPG.Background"}}
                </span>
                <span title="{{localize "XPRPG.BackgroundTitle"}}">
                    <h3>
                        <span class="value">{{background.name}}</span>
                        {{#if @root.options.editable}}
                            {{#if background}}
                                <a class="item-edit"><i class="fas fa-fw fa-edit"></i></a>
                            {{else}}
                                <a class="open-compendium" data-compendium="xprpg.backgrounds"><i class="fas fa-fw fa-plus-circle"></i></a>
                            {{/if}}
                        {{/if}}
                    </h3>
                </span>
            </div>
        </div>
    </section>

    <hr />
    <section class="character-background">
        {{> "systems/xprpg/templates/actors/character/partials/background.hbs"}}
    </section>

    <hr />
    <section class="character-traits">
        {{> "systems/xprpg/templates/actors/character/partials/traits.hbs"}}
    </section>

    <h3 class="header">{{localize "XPRPG.AbilityScoresHeader"}} <button type="button" data-action="edit-ability-scores"><i class="fas fa-fw fa-edit"></i>{{localize "XPRPG.Edit"}}</button></h3>
    <section class="character-abilities">
        {{> "systems/xprpg/templates/actors/character/partials/abilities.hbs"}}
    </section>
</div>
