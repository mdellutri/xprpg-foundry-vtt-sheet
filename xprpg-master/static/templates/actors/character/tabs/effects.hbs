<div class="tab effects actions-pane" data-group="primary" data-tab="effects">
    <h3 class="header">{{localize "XPRPG.ConditionsLabel"}}</h3>
    <ol class="effects-list directory-list item-list">
        {{> "systems/xprpg/templates/actors/partials/conditions.hbs"}}
    </ol>

    <h3 class="header">{{localize "XPRPG.EffectsLabel"}}</h3>
    <ol class="effects-list directory-list item-list">
        {{> "systems/xprpg/templates/actors/partials/conditions.hbs" conditions=document.itemTypes.effect}}
    </ol>

    <h3 class="header">
        {{localize "XPRPG.FeatDeityBoonCursesHeader"}}
        {{#if options.editable}}
            <button type="button" class="item-control feat-browse" data-type="feat"><i class="fas fa-fw fa-search"></i>{{localize "XPRPG.BrowseLabel"}}</button>
        {{/if}}
    </h3>
    <ol class="effects-list directory-list item-list">
        {{#each actor.deityBoonsCurses as |feat|}}
            <li class="item feat-item" data-item-id="{{feat.id}}">
                <div class="item-name rollable">
                    <div class="feat-slot-title"></div>
                    <div class="item-image" style="background-image: url({{feat.img}})">
                        <i class="fas fa-comment-alt"></i>
                    </div>
                    <h4>{{feat.name}}</h4>
                </div>
                {{#if @root.options.editable}}
                    <div class="item-controls">
                        <a class="item-control item-edit" title="{{localize "XPRPG.EditItemTitle"}}"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control item-delete" title="{{localize "XPRPG.DeleteItemTitle"}}"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                {{/if}}
            </li>
        {{/each}}
    </ol>
</div>
