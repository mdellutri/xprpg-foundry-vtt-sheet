<section class="tab xps" data-group="primary" data-tab="xps">
    <section class="organized-play">
            <label class="player-number details-label" for="{{options.id}}-xps-player-number">{{localize "XPRPG.PFS.OrganizedPlayNumber"}}</label>
            <label class="character-number details-label" for="{{options.id}}-xps-character-number">{{localize "XPRPG.PFS.CharacterNumber"}}</label>

            <input type="number" class="player-number details-input" id="{{options.id}}-xps-player-number" name="system.xps.playerNumber" value="{{data.xps.playerNumber}}" min="10000" max="99999" placeholder="10000" />
            <span class="dash">&ndash;</span>
            <input type="number" class="character-number details-input" id="{{options.id}}-xps-character-number" name="system.xps.characterNumber" value="{{data.xps.characterNumber}}" min="2001" max="9999" placeholder="2001" />
    </section>
    <section class="level-bump">
        <label class="details-label" for="{{options.id}}-xps-level-bump">{{localize "XPRPG.PFS.LevelBump"}}</label>
        <div class="toggle{{#if data.xps.levelBump}} enabled{{/if}}">
            <input class="details-input" id="{{options.id}}-xps-level-bump" name="system.xps.levelBump" type="checkbox" {{checked data.xps.levelBump}} />
            <label for="{{options.id}}-xps-level-bump"></label>
        </div>
    </section>
    <section class="faction">
        <label class="details-label" for="{{options.id}}-xps-current-faction">{{localize "XPRPG.PFS.CurrentFaction"}}</label>
        <select id="{{options.id}}-xps-current-faction" name="system.xps.currentFaction" title="{{localize "XPRPG.PFS.CurrentFaction"}}">
            {{#select data.xps.currentFaction}}
                {{#each xpsFactions as |label key|}}
                    <option value="{{key}}">{{localize label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </section>
    <section class="reputations">
        <span class="details-label">{{localize "XPRPG.PFS.Reputation"}}</span>
        {{#each data.xps.reputation as |rep faction|}}
            <div class="reputation">
                <label for="{{@root.options.id}}-xps-rep-{{faction}}">{{localize (add "XPRPG.PFS.Factions." faction)}}:</label>
                <input type="number" class="details-input small-input" id="{{@root.options.id}}-xps-rep-{{faction}}" name="system.xps.reputation.{{faction}}" value="{{rep}}" placeholder="0" />
            </div>
        {{/each}}
        </div>
    </section>

    <h3 class="header">
        {{localize "XPRPG.FeatPFSBoonHeader"}}
        <button type="button" class="item-control feat-browse" data-type="feat"><i class="fas fa-fw fa-search"></i>{{localize "XPRPG.BrowseLabel"}}</button>
    </h3>

    <ol class="actions-list directory-list">
        {{#each actor.xpsBoons as |feat|}}
            <li class="item feat-item" data-item-id="{{feat.id}}">
                <div class="item-name rollable">
                    <div class="item-image" alt="{{feat.name}}" style="background-image: url({{feat.img}})">
                        <i class="fas fa-comment-alt"></i>
                    </div>
                    <h4>{{feat.name}}</h4>
                </div>
                {{#if @root.options.editable}}
                    <div class="item-controls">
                        <a class="item-control item-edit" title="{{localize "XPRPG.EditItemTitle"}}"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control item-delete" title="{{localize "XPRPG.DeleteItemTitle"}}"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                {{/if}}
            </li>
        {{/each}}
    </ol>
</section>
