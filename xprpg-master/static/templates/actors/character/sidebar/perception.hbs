<div class="sidebar_title">
    <h2>{{localize "XPRPG.PerceptionHeader"}}</h2>
    <button type="button" class="modifiers_button hover" data-tooltip-content="#{{options.id}}-perception-modifiers">
        <i class="fas fa-eye"></i> {{localize "XPRPG.ModifiersTitle"}}
    </button>
</div>
<div class="roll-data perception-sidebar" data-attribute="perception">
    <a class="roll-icon attribute-name" data-action="perception-check" title="{{localize "XPRPG.Check.Specific.Perception.Label"}}">
        {{> "systems/xprpg/templates/actors/character/icons/d20.hbs"}}
    </a>

    <a class="roll-icon attribute-name" data-action="perception-check" data-secret="true" title="{{localize "XPRPG.Check.Specific.Perception.Secret"}}">
        <i class="fas fa-eye-slash"></i>
    </a>
    <h3>{{numberFormat data.attributes.perception.value decimals=0 sign=true}}</h3>

    <div class="perception-prof button-group skill-container">
        <select class="perception-proficiency pf-rank adjust-stat-select{{#if rank.immutable}} readonly{{/if}}" data-property="system.attributes.perception.rank" data-rank="{{data.attributes.perception.rank}}" data-dtype="Number">
            {{> "systems/xprpg/templates/actors/character/partials/proficiencylevels-dropdown.hbs" proflevel=data.attributes.perception.rank}}
        </select>
    </div>

</div>
{{#with data.attributes.perception}}
    {{> "systems/xprpg/templates/actors/character/partials/modifiers-tooltip.hbs" title="XPRPG.PerceptionHeader"}}
{{/with}}
