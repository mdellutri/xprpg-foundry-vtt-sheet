<form class="{{cssClass}} crb-style{{#if isProficiencyLocked}} proficiency-lock{{/if}}" autocomplete="off">
    <aside>
        <img class="logo" src="systems/xprpg/assets/xenos_paragon_logo.webp" height="56" alt="" srcset="" />
        <div class="sidebar" data-group="dashboard" data-tab="sidebar">
            <!-- HEALTH -->
            {{> "systems/xprpg/templates/actors/character/sidebar/health.hbs"}}

            <!-- STAMINA (if enabled) -->
            {{#if hasStamina}}
                {{> "systems/xprpg/templates/actors/character/sidebar/stamina.hbs"}}
            {{/if}}

            <!-- ARMOR CLASS -->
            {{> "systems/xprpg/templates/actors/character/sidebar/armor-class.hbs"}}

            <!-- Perception -->
            {{> "systems/xprpg/templates/actors/character/sidebar/perception.hbs"}}

            <!-- Initiative -->
            {{> "systems/xprpg/templates/actors/character/sidebar/initiative.hbs"}}

            <!-- Saves -->
            {{> "systems/xprpg/templates/actors/character/sidebar/saves.hbs"}}

            <!-- Class DC -->
            {{> "systems/xprpg/templates/actors/character/sidebar/class-dc.hbs"}}

            <!-- IWR -->
            {{> "systems/xprpg/templates/actors/character/sidebar/iwr.hbs"}}
        </div>
    </aside>

    <!-- HEADER -->
    {{> "systems/xprpg/templates/actors/character/partials/header.hbs"}}

    <!-- SHEET NAVIGATION -->
    <nav class="sheet-navigation" data-group="primary">
        <span class="navigation-title">{{localize "XPRPG.TabCharacterLabel"}}</span>
        <a class="item{{#unless tabVisibility.character}} hidden{{/unless}}" data-tab="character" title="{{localize "XPRPG.TabCharacterLabel"}}">
            <i class="fas fa-address-card"></i>
        </a>

        <a class="item{{#unless tabVisibility.actions}} hidden{{/unless}}" data-tab="actions" title="{{localize "XPRPG.TabActionsLabel"}}">
            <span class="action-icon">A</span>
        </a>

        <a class="item{{#unless tabVisibility.inventory}} hidden{{/unless}}" data-tab="inventory" title="{{localize "XPRPG.TabInventoryLabel"}}">
            <i class="fas fa-box-open"></i>
        </a>

        <a class="item{{#unless tabVisibility.spellcasting}} hidden{{/unless}}" data-tab="spellcasting" title="{{localize "XPRPG.TabSpellbookLabel"}}">
            <i class="fas fa-wand-magic-sparkles"></i>
        </a>

        <a class="item{{#unless tabVisibility.crafting}} hidden{{/unless}}" data-tab="crafting" title="{{localize "XPRPG.TabCraftingLabel"}}">
            <i class="fas fa-hammer"></i>
        </a>

        <a class="item{{#unless tabVisibility.proficiencies}} hidden{{/unless}}" data-tab="proficiencies" title="{{localize "XPRPG.TabSkillsLabel"}}">
            <i class="fas fa-hand-paper"></i>
        </a>

        <a class="item{{#unless tabVisibility.feats}} hidden{{/unless}}" data-tab="feats" title="{{localize "XPRPG.TabFeatsLabel"}}">
            <i class="fas fa-medal"></i>
        </a>

        <a class="item{{#unless tabVisibility.effects}} hidden{{/unless}}" data-tab="effects" title="{{localize "XPRPG.TabEffectsLabel"}}">
            <i class="fas fa-star"></i>
        </a>

        <a class="item{{#unless tabVisibility.biography}} hidden{{/unless}}" data-tab="biography" title="{{localize "XPRPG.Biography"}}">
            <i class="fas fa-book-reader"></i>
        </a>

        <a class="item{{#unless tabVisibility.xps}} hidden{{/unless}}" data-tab="xps" title="{{localize "XPRPG.TabXenosParagonSociety"}}">
            {{> "systems/xprpg/templates/actors/character/icons/xps.hbs"}}
        </a>

        <a class="manage-tabs" data-action="manage-tabs" title="{{localize "XPRPG.TabManageTabsLabel"}}">
            <i class="fas fa-fw fa-ellipsis-v"></i>
        </a>
    </nav>

    <!-- BODY -->
    <section class="sheet-body">
        <section class="sheet-content">
            <!-- Character -->
            {{> "systems/xprpg/templates/actors/character/tabs/general.hbs"}}

            <!-- Actions -->
            {{> "systems/xprpg/templates/actors/character/tabs/actions.hbs"}}

            <!-- Crafting -->
            {{> "systems/xprpg/templates/actors/character/tabs/crafting.hbs"}}

            <!-- INVENTORY -->
            {{> "systems/xprpg/templates/actors/character/tabs/inventory.hbs"}}

            <!-- SPELLBOOK -->
            {{> "systems/xprpg/templates/actors/character/tabs/spellcasting.hbs"}}

            <!-- SKILLS -->
            {{> "systems/xprpg/templates/actors/character/tabs/proficiencies.hbs"}}

            <!-- FEATS -->
            {{> "systems/xprpg/templates/actors/character/tabs/feats.hbs"}}

            <!-- Effects -->
            {{> "systems/xprpg/templates/actors/character/tabs/effects.hbs"}}

            <!-- BIOGRAPHY -->
            {{> "systems/xprpg/templates/actors/character/tabs/biography.hbs"}}

            <!-- Paragon -->
            {{> "systems/xprpg/templates/actors/character/tabs/xps.hbs"}}
        </section>
    </section>
</form>
