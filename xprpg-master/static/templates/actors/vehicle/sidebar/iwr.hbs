<div class="sidebar_title"><h2>{{localize "XPRPG.ImmunitiesLabel"}}</h2></div>
<ol class="immunities tags">
    {{#each data.attributes.immunities as |immunity|}}
        <li class="tag tag_secondary" data-immunity="{{immunity.type}}">{{immunity.label}}</li>
    {{/each}}
    {{#if options.editable}}
        <li class="tag edit-btn">
            <a data-action="edit-immunities" title="{{localize "XPRPG.NPC.EditImmunities"}}"><i class="fa-solid fa-edit"></i></a>
        </li>
    {{/if}}
</ol>

